<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
      id="loaderDialog"
      title="Hello {/recipient/name}">
      	<Table id="idProductsTable"
		    inset="false"
            items="{path: 'loaderModel>/'}"
		>
		<columns>
			<Column>
				<Text text="{i18n>val1}" />
			</Column>
            <Column>
				<Text text="{i18n>val2}" />
			</Column>
            <Column>
				<Text text="{i18n>actions}" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{loaderModel>key}" />
                    <Text text="{loaderModel>value}" />
                    <HBox>
                        <Button icon="sap-icon://edit" text="{i18n>edit}" class="sapUiSmallMarginEnd"/>
                        <Button icon="sap-icon://delete" text="{i18n>delete}" type="Negative"/>
                    </HBox>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
    </Dialog>
</core:FragmentDefinition>
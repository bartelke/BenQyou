<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
      id="loaderDialog"
      title="{i18n>loaderHeader}">
	  <content>
      	<Table id="idProductsTable"
		    inset="false"
            items="{path: 'loaderModel>/'}"
		>
		<columns>
			<Column width="40%">
				<Text text="{i18n>val1}" />
			</Column>
            <Column width="40%">
				<Text text="{i18n>val2}" />
			</Column>
            <Column width="20%">
				<Text text="{i18n>actions}" width="auto"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<HBox id="firstLangItems" width="100%">
						<Text text="{loaderModel>key}" visible="{=!${loaderModel>/isEditable}}" />
						<Input value="{loaderModel>key}" visible="{loaderModel>/isEditable}" width="380px"/>
					</HBox>
					<HBox id="secondLangItems" width="100%">
						<Text text="{loaderModel>value}" visible="{=!${loaderModel>/isEditable}}"/>
						<Input value="{loaderModel>value}" visible="{loaderModel>/isEditable}" width="380px"/>
					</HBox>
                    <HBox id="actionItems">
                        <Button icon="sap-icon://delete" text="{i18n>delete}" type="Reject" press=".onPressDelete"/>
                    </HBox>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
    </content>
	<footer>
			<Toolbar>
				<content>
					<ToolbarSpacer />
					<Button type="Accept"
							text="{i18n>save}"
							press=".saveData" 
							icon="sap-icon://save"/>
					<Button text="{i18n>edit}" type="Neutral" icon="sap-icon://edit" class="sapUiSmallMargin" press=".toggleEdit"/>
					<Button id="Reject"
						text="{i18n>close}"
						type="Transparent"
						press=".closeDialog"
						ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>